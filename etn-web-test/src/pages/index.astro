---
import Header from '../components/react/Header';
import Slider from '../components/react/Slider';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Etn Test">
	<Header client:only='react'/>
	<section class="w-full grid lg:grid-cols-4 bg-etn-principal p-3 gap-8">
		<div class="lg:col-span-3">
			<Slider client:only='react'/>
		</div>
		<div class="col-span-1 cursor-pointer">
			<img src="https://etn.com.mx/img/img-lateral-doters1a.png" alt="Doters" class="w-full">
		</div>
	</section>
	<section class="w-full grid lg:grid-cols-10 p-2 gap-2">
		<article class="hidden lg:flex lg:col-span-2">
			<img src="https://etn.com.mx/img/banner-unete-doters.png" alt="Doters-unete-ya">
		</article>
		<article class="lg:col-span-4 bg-zinc-400 lg:rounded-bl-card flex flex-col gap-4">
			<div class="p-3 w-full">
				<img src="https://etn.com.mx/img/icono-motivos.jpg" class="h-5">
			</div>
			<h2 class="text-center text-xl lg:text-3xl font-bold text-etn-principal">Renta de Autobuses ETN Turistar</h2>
			<div class="flex px-5 items-center justify-center gap-5 lg:items-center mt-5">
				<img src="https://etn.com.mx/img/icono-renta-autobuses.jpg" class="w-2/5 lg:w-1/4">
				<img src="https://etn.com.mx/img/turismo-gran-clase-ETN.png" class="h-2/5 lg:h-3/4">
			</div>
			<button class="p-3 lg:py-5 lg:px-10 bg-etn-principal lg:w-1/3 rounded border-2 border-etn-secundary text-xl mb-4 lg:text-2xl font-bold text-white self-center mt-5">
				Renta Aqui
			</button>
		</article>
		<article class="lg:col-span-4 bg-zinc-400 lg:rounded-bl-card flex flex-col gap-4">
			<div class="p-3 w-full">
				<img src="https://etn.com.mx/img/icono-motivos.jpg" class="h-5">
			</div>
			<h2 class="text-center text-xl lg:text-3xl font-bold text-etn-principal">Mensajería y paquetería Ligera extra-urgente</h2>
			<div class="flex px-5 justify-center gap-5 items-center mt-10">
				<img src="https://etn.com.mx/img/envia-tu-paquete.png" class=" w-2/5 lg:w-1/4">
				<img src="https://etn.com.mx/img/logo-multienvios.png" class="h-2/6 lg:h-3/4">
			</div>
			<button class="p-3 lg:py-5 lg:px-10 bg-etn-principal lg:w-1/3 rounded border-2 border-etn-secundary text-xl mb-4 lg:text-2xl font-bold text-white self-center mt-5">
				Envie Aqui
			</button>
		</article>
	</section>
	<section class="grid lg:grid-cols-3 gap-3 p-1">
		<img src="https://etn.com.mx/img/10-porciento-de-descuento.webp" alt="Decuentos" class="w-full h-full">
		<img src="https://etn.com.mx/img/descuentos/tarifa-anticipada-25.png" alt="Decuentos" class="w-full h-full">
		<img src="https://etn.com.mx/img/10-15-porciento-de-descuento.webp" alt="Decuentos" class="w-full h-full">
	</section>
</Layout>

